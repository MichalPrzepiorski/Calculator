#:kivy 2.1.0
#:import utils kivy.utils
<MyGrid>:

    GridLayout:
        cols:1
        size: root.width, root.height

        TextInput:
            id: calc_input
            text:"0"
            size_hint: (1, 0.19)

        TextInput:
            id: excep_input
            text:""
            size_hint: (1, 0.1)
        GridLayout:
            cols:4

            Button:
                size_hint: (.2, .2)
                #background_color: (55/255, 55/255, 55/255)
                background_color:utils.get_color_from_hex('#42a4f5') #hex_colo_codes, opaque podaje siÄ™ w kodzie hex!
                id: C
                text:"C"
                on_press: root.clear()

            Button:
                size_hint: (.2, .2)
                id: >>
                text: u"\u00AB"
                on_press: root.clear_one_char()

            Button:
                size_hint: (.2, .2)
                id: Z
                text:"+/-"
                on_press: root.plus_minus()

            Button:
                size_hint: (.2, .2)
                id: X
                font_size: 15
                text:"complex_to_exp"
                on_press: root.complex_exp()

            Button:
                size_hint: (.2, .2)
                id: 9
                text:"9"
                on_press: root.button_press(9)

            Button:
                size_hint: (.2, .2)
                id: 8
                text:"8"
                on_press: root.button_press(8)

            Button:
                size_hint: (.2, .2)
                id: 7
                text:"7"
                on_press: root.button_press(7)

            Button:
                size_hint: (.2, .2)
                id: +
                text:"+"
                on_press: root.math_sign("+")

            Button:
                size_hint: (.2, .2)
                id: 6
                text:"6"
                on_press: root.button_press(6)

            Button:
                size_hint: (.2, .2)
                id: 5
                text:"5"
                on_press: root.button_press(5)

            Button:
                size_hint: (.2, .2)
                id: 4
                text:"4"
                on_press: root.button_press(4)

            Button:
                size_hint: (.2, .2)
                id: -
                text:"-"
                on_press: root.math_sign("-")

            Button:
                size_hint: (.2, .2)
                id: 3
                text:"3"
                on_press: root.button_press(3)

            Button:
                size_hint: (.2, .2)
                id: 2
                text:"2"
                on_press: root.button_press(2)

            Button:
                size_hint: (.2, .2)
                id: 1
                text:"1"
                on_press: root.button_press(1)

            Button:
                size_hint: (.2, .2)
                id: *
                text:"*"
                on_press: root.math_sign("*")

            Button:
                size_hint: (.2, .2)
                id: 0
                text:"0"
                on_press: root.button_press(0)

            Button:
                size_hint: (.2, .2)
                id: .
                text:"."
                on_press: root.dot()

            Button:
                size_hint: (.2, .2)
                id: =
                text:"="
                on_press: root.equal()

            Button:
                size_hint: (.2, .2)
                id: /
                text:"/"
                on_press: root.math_sign("/")

            Button:
                size_hint: (.2, .2)
                id: /
                text:"j"
                on_press: root.math_sign("j")

            Button:
                size_hint: (.2, .2)
                id: /
                text:"ANS"
                on_press: root.ANS()